{% extends 'base_layout.html.twig' %}

{% block title %}
    MeowUpload - upload successful!
{% endblock %}

{% block maincontent %}
    <div id="uploader">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-xs-12">
                {% if success == true %}

                    <input class="form-control uploadControls" id="uploadResult" title="Here's your file!" value="{{ link }}">
                    <button id="clipboardbtn" class="btn btn-success uploadControls clipbutton" data-clipboard-target="#uploadResult">
                        <img src="/static/clippy.svg" alt="Copy to clipboard" width="15">
                    </button>

                {% else %}
                    <div class="alert alert-info">
                        <strong>{{ text }}</strong>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}